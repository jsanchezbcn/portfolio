# IBKR Gateway credentials / settings
IBKR_USER=
IBKR_PASSWORD=
IBKR_GATEWAY_URL=https://localhost:5001
IBKR_ACCOUNT_ID=                        # e.g. U1234567 — required for order submission and whatif API

# IBKR trading bridge runtime (005-ibkr-trading-bridge)
IB_API_MODE=SOCKET                      # SOCKET | PORTAL
IB_SOCKET_HOST=127.0.0.1
IB_SOCKET_PORT=7496
IB_CLIENT_ID=10
IB_ACCOUNT=                             # optional; empty = auto-detect where supported
BRIDGE_POLL_INTERVAL=5                  # seconds
BRIDGE_BUFFER_PATH=~/.portfolio_bridge_buffer.jsonl

# Tastytrade credentials (preferred: OAuth refresh token per SDK v12+)
TASTYTRADE_USERNAME=
TASTYTRADE_PASSWORD=
TASTYTRADE_REFRESH_TOKEN=
TASTYTRADE_REMEMBER_TOKEN=
TASTYTRADE_2FA_CODE=
TT_SECRET=                              # Tastytrade provider_secret for Session(provider_secret=..., refresh_token=...)
TT_REFRESH=                             # Tastytrade refresh_token

# AI / LLM
COPILOT_TOKEN=                          # GitHub Copilot SDK token (ghp_...) — used by agents/llm_client.py

# Algorithmic execution platform (003-algo-execution-platform)
SNAPSHOT_INTERVAL_SECONDS=900          # Background portfolio snapshot interval (default: 15 min)
THETA_BUDGET_PER_SUGGESTION=0          # Max theta cost per AI trade suggestion (0 = unlimited)

# Greeks diagnostics behavior
GREEKS_DISABLE_CACHE=0
GREEKS_FORCE_REFRESH_ON_MISS=1

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/portfolio_risk_manager.log

# Trade Proposer Agent (Feature 006)
PROPOSER_INTERVAL=300            # seconds between monitoring cycles (default: 300)
PROPOSER_NOTIFY_THRESHOLD=0.5    # efficiency_score threshold for Telegram alert
PROPOSER_DB_URL=postgresql+psycopg2://user:pass@localhost/portfoliodb
